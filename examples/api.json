{
  "port": 5000,
  "routes": [
    {
      "method": "GET",
      "path": "/users",
      "status": 200,
      "delay": 500,
      "response": {
        "users": [
          { "id": 1, "name": "Alice" },
          { "id": 2, "name": "Bob" }
        ]
      },
      "simulateError": {
        "status": 500,
        "response": { "error": "Something went wrong on the server" }
      }
    },
    {
      "method": "POST",
      "path": "/users",
      "status": 201,
      "match": {
        "body": { "email": "alice@example.com", "name": "Alice" }
      },
      "response": {
        "message": "User created successfully"
      },
      "simulateError": {
        "status": 500,
        "response": { "error": "Something went wrong on the server" }
      }
    },
    {
      "method": "GET",
      "path": "/users/:id",
      "status": 200,
      "response": {
        "id": 1,
        "name": "Alice",
        "email": "alice@example.com"
      },
      "simulateError": {
        "status": 500,
        "response": { "error": "Something went wrong on the server" }
      }
    }
  ]
}
